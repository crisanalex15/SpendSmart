@{
    ViewData["Title"] ="Create / Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <p>Create or edit an expense.</p>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Value" class="mt-4">Value $</label>
        <input asp-for="Value" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="mt-4">Description</label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-4" type="submit">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
